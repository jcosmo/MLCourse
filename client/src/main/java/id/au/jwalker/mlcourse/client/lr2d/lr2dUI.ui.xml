<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.canvas.client'>
  <g:DockLayoutPanel unit="EM">
    <g:north size="3">
      <g:Label styleName="innerHeader">Linear Regression in 2 Dimensions</g:Label>
    </g:north>
    <g:center>
      <c:Canvas ui:field="canvas"/>
    </g:center>
    <g:south size="3">
      <g:Button ui:field="startButton">Start</g:Button>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>